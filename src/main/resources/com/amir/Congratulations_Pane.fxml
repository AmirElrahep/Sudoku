<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<DialogPane stylesheets="@css/dialog.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amir.controller.Congratulations_Controller">
   <buttonTypes>
      <ButtonType fx:constant="YES" />
      <ButtonType fx:constant="CLOSE" />
      <ButtonType fx:constant="PREVIOUS" />
   </buttonTypes>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <graphic>
      <ImageView fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/congratulations_color.png" />
         </image>
      </ImageView>
   </graphic>
   <content>
      <Label prefWidth="300.0" text="Congratulations you solved the puzzle! Do you want to start a new game? Press Close to quit the application or Previous to select a different difficulty." textFill="WHITE" wrapText="true">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </content>
</DialogPane>
